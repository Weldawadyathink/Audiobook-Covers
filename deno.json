{
  "tasks": {
    "dev": "vite",
    "dev-server": "NODE_ENV=development deno run --watch -A ./src/server/index.ts",
    "build": {
      "command": "vite build && deno compile --check --frozen -A ./src/server/index.ts --output server",
      "dependencies": [
        "clean",
        "check"
      ]
    },
    "docker-build": {
      "command": "docker build . -t audiobookcovers",
      "dependencies": [
        "clean"
      ]
    },
    "docker-run": "docker run -it --rm audiobookcovers",
    "clean": "rm -rf ./dist server",
    "check": "deno lint && deno fmt"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.3",
    "@radix-ui/react-slot": "npm:@radix-ui/react-slot@^1.1.2",
    "@std/http": "jsr:@std/http@^1.0.13",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.0.6",
    "@tanstack/react-query": "npm:@tanstack/react-query@^5.66.0",
    "@tanstack/react-router": "npm:@tanstack/react-router@^1.102.1",
    "@tanstack/router-devtools": "npm:@tanstack/router-devtools@^1.102.1",
    "@tanstack/router-plugin": "npm:@tanstack/router-plugin@^1.102.1",
    "@trpc/client": "npm:@trpc/client@^11.0.0-rc.730",
    "@trpc/react-query": "npm:@trpc/react-query@^11.0.0-rc.730",
    "@trpc/server": "npm:@trpc/server@^11.0.0-rc.730",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.4",
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "clsx": "npm:clsx@^2.1.1",
    "lucide-react": "npm:lucide-react@^0.475.0",
    "react": "npm:react@^19.0.0",
    "react-dom": "npm:react-dom@^19.0.0",
    "tailwind-merge": "npm:tailwind-merge@^3.0.1",
    "tailwindcss": "npm:tailwindcss@^4.0.6",
    "tailwindcss-animate": "npm:tailwindcss-animate@^1.0.7",
    "zod": "npm:zod@^3.24.1",
    "vite": "npm:vite@^6.0.11"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "npm:react@^19.0.0",
    "jsxImportSourceTypes": "npm:@types/react@^19.0.0",
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ]
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    },
    "exclude": [
      "src/routeTree.gen.ts"
    ]
  },
  "fmt": {
    "exclude": [
      "src/routeTree.gen.ts"
    ]
  }
}
